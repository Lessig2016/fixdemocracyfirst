<% if notice %>
	<div class="alert alert-dismissible alert-success col-lg-12">
		<button type="button" class="close" data-dismiss="alert">×</button>
		<%= notice %>
	</div>
<% end %>

<div class="well bs-component col-lg-12">
  <p>
    <strong>Title:</strong>
    <%= @statement.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= raw(sanitize(@statement.description, tags: SUPPORTED_HTML_TAGS)) %>
  </p>

  <p>
    <strong>Submitting User:</strong>
    <%= @statement.user_name %>
  </p>

  <p>
    <strong>Video URL:</strong>
    <%= @statement.youtube_url %>
  </p>
    
  <ul class="pager">
  	<li class="next"><%= link_to 'Edit →', edit_statement_path(@statement) %></li>
  </ul>

  <div class="row">
    <div class="col-md-8">
      <iframe class='large-video-frame' src="<%=@statement.youtube_embed_url%>?hd=1&rel=0&autohide=1&showinfo=0" frameborder="0"></iframe>
    </div>
  </div>

</div>