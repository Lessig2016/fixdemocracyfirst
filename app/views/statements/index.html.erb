<p id="notice"><%= notice %></p>

<h2>Listing Statements</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>RepsWithUs ID</th>
      <th>User</th>
      <th>Event day</th>
      <th>Campaign</th>
      <th>Candidate</th>
      <th>Title</th>
      <th>Url</th>
      <th>Description</th>
      <th>Approved</th>
      <th>Ugc candidate name</th>
      <th>Ugc date</th>
      <th>Ugc event title</th>
      <th>Ugc event location</th>
      <th>Ugc notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statements.each do |statement| %>
      <tr>
        <td><%= statement.rwu_id %></td>
        <td><%= statement.user_id %></td>
        <td><%= statement.event_day_id %></td>
        <td><%= statement.campaign_id %></td>
        <td><%= statement.candidate_id %></td>
        <td><%= statement.title %></td>
        <td><%= statement.url %></td>
        <td><%= statement.description %></td>
        <td><%= statement.approved %></td>
        <td><%= statement.ugc_candidate_name %></td>
        <td><%= statement.ugc_date %></td>
        <td><%= statement.ugc_event_title %></td>
        <td><%= statement.ugc_event_location %></td>
        <td><%= statement.ugc_notes %></td>
        <td><%= link_to 'Show', statement %></td>
        <td><%= link_to 'Edit', edit_statement_path(statement) %></td>
        <td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

