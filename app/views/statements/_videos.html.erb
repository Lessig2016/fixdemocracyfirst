<div class="row col-lg-12" style="margin-left:35px">
<% @videos.each do |video| %>  
  <div class="col-lg-4 panel panel-default" style="padding: 0; width: 400px; margin-right: 30px">
    <div style="padding: 0" class="panel-body">
      <div class="col-lg-12"><%=AMERICA_NEW_YORK_TIME_ZONE.format_date(video.date)%></div>
      <h4 class="col-lg-12">
        <% if @current_user.admin? %>
          <%=link_to "#{video.candidate_name} answers the question", edit_statement_path(video) %>
        <% else %>    
          <%=video.candidate_name%> answers the question
        <% end %>
      </h4>
      <iframe style="margin-bottom: 35px" src="<%=video.youtube_embed_url%>?hd=1&rel=0&autohide=1&showinfo=0" 
        frameborder="0" width="400" height="224">
      </iframe>
    </div>
  </div>
<% end %>
</div>