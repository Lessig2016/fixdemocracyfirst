<div id="video-answers" class="row col-lg-12">
<% @videos.each do |video| %>  
  <div class="col-lg-3">
    <h4><%=link_to video.title, video %></h4> 
    <div style="padding-top: 55.6%; position: relative; height: 0; width: 100%">
      <iframe style="width: 100%; height: 100%; top: 0; left: 0; position: absolute" 
        src="<%=video.youtube_embed_url%>?hd=1&rel=0&autohide=1&showinfo=0" 
        frameborder="0">
      </iframe>
    </div>
    <div>
      <a href="https://twitter.com/share"
         class="twitter-share-button"
         data-text="Why do you want to fix our democracy? Check out <%= video.title %>" <!-- TODO deep link to video>
         data-via="lessig2016"
         data-size="large"
         data-hashtags="FixDemocracyFirst">Tweet</a>
      <div class="fb-share-button"
         data-href="http://fixdemocracyfirst.us/" <!-- TODO deep link to video -->
         data-layout="button_count"></div>
      </div>
    </div>
  <%= render 'statements/modal', video: video %>  
<% end %>
</div>