<% if notice || alert %>
  <div class="alert alert-dismissible alert-<%=notice ? 'success' : 'danger'%> col-lg-12">
  	<button type="button" class="close" data-dismiss="alert">Ã—</button>
  	<%= notice || alert %>
  </div>
<% end %>

<div class="col-lg-12">
  <form method="get" action="search" class="col-lg-12">
	  <fieldset>
      <div class="col-lg-3">
        <input name="q" type="text" value="<%= params[:q] %>" class="form-control"/>
      </div>
      <div class="col-lg-1">    
        <input type="submit" value="Search" class="btn btn-info"/>
      </div>
      <h3 class="col-lg-offset-6 col-lg-2"><%= pluralize(@events.size, 'result') %></h3>
    </fieldset>
  </form>
</div>

<div class="col-lg-12" style="margin-top: 20px">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Campaign Name</th>
        <th>Speaker Name(s)</th>
        <th>Event Name</th>
        <th>Location</th>
        <th>Public</th>
        <th>Attending?</th>
      </tr>
    </thead>
    <tbody>
    <% @events.each do |e| %>
      <tr>
        <th><%= e.format_candidates %></th>
        <th><%= e.format_speakers %></th>
        <th><%= e.title %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    <% end %>
    </body>
  </table>
</div>