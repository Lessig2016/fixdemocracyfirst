<% if notice %>
	<div class="alert alert-dismissible alert-success col-lg-12">
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= notice %>
	</div>
<% end %>

<div class="page-header">
  <h2>Campaigns</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Candidate</th>
      <th>Election</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.candidate_name %></td>
        <td><%= campaign.election_name %></td>
        <td><%= link_to 'Show', campaign, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Campaign', new_campaign_path, class: "btn btn-primary" %>
