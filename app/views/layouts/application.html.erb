  </head>
  <body>
    <div id="fb-root"></div>
    <header class="main-header">
      <nav class="navbar navbar-default navbar-static-top main-nav">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to image_tag('lessig-logo-fdf.png', { id: 'logo' }), '/', class: 'navbar-brand' %>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <%= link_to "Donate", "#", class: 'main-nav__btn' %>
            <% if @current_user.admin? %>
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><%=link_to 'Statements (Videos)', :statements%></li>
                    <li><%=link_to 'Users', :users%></li>
                  </ul>
                </li>
              </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <div class="main-subheader">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-3 col-sm-3">
            <%= image_tag 'lessig-fdf-slogan.png', { class: 'main-subheader__tagline' } %>
          </div>
          <div class="col-md-9 col-sm-9">
            <div class="main-subheader__social">
              <span>Share</span>
              <a href="https://twitter.com/share"
                 class="twitter-share-button"
                 data-text="Why do you want to fix our democracy? Tell us your story!"
                 data-via="lessig2016"
                 data-size="large"
                 data-hashtags="FixDemocracyFirst">Tweet</a>
              <div class="fb-share-button"
                 data-href="http://fixdemocracyfirst.us/"
                 data-layout="button_count"></div>
             </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <%= yield %>
      </div>
    </div>
    <footer class="main-footer">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-sm-12 main-footer__area main-footer__area--1">
            <%= image_tag 'logo-2016-footer.png' %>
            <br/>
            <ul class="main-footer__vertical-lg">
              <li><%= link_to 'Home', controller: :static_pages, action: :home %></li>
              <li><%= link_to 'Share Your Story', controller: :statements, action: :new %></li>
            </ul>
          </div>
          <div class="col-md-4 col-sm-12 main-footer__area main-footer__area--2">
            <%=link_to 'Back to Lessig2016.us',
              'http://Lessig2016.us', target: '_blank' %>
            <p class="paid-for-box">
              Paid for by Lessig Equal Citizens Exploratory Committee
            </p>
          </div>
          <div class="col-md-4 col-sm-12 main-footer__area main-footer__area--3">
            <span class="footer-detail">&copy; 2015 Lessig Equal Citizens</span>
            <span class="footer-detail">Exploratory Committee</span>
            <span class="footer-detail">Some Rights Reserved</span>
            <ul class="main-footer__horizontal-lg">
              <li><%= link_to 'Email', 'mailto:questionr@nhrebellion.org?subject=A%20Question%20about%20Questionr.us' %></li> |
              <li><%= link_to 'Privacy Policy', 'http://www.nhrebellion.org/privacy_policy', target: '_blank' %></li> |
              <li><%= link_to 'Terms of Service', 'mailto:media@nhrebellion.org?subject=Questionr%20Media%20Inquiry' %></li>
            </ul>
            <%= link_to image_tag("https://i.creativecommons.org/l/by/3.0/80x15.png"),
              "http://creativecommons.org/licenses/by-sa/4.0/", target: '_blank' %>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>