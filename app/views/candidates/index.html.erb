<p id="notice"><%= notice %></p>

<h2>Listing Candidates</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>RepsWithUs ID</th>
      <th>Person</th>
      <th>Office</th>
      <th>Position</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.rwu_id %></td>
        <td><%= candidate.person_id %></td>
        <td><%= candidate.office_id %></td>
        <td><%= candidate.position %></td>
        <td><%= candidate.district %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

