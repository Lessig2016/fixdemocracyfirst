<% if notice || alert %>
<div class="row">
  <div class="alert alert-dismissible alert-<%=notice ? 'success' : 'danger'%> col-lg-12">
  	<button type="button" class="close" data-dismiss="alert">×</button>
  	<%= notice || alert %>
  </div>
</div>
<% end %>

<style>
  h1 { font-family: "Lato","Helvetica Neue",​Helvetica,Arial,​sans-serif }
  div.tryptic-large { 
    background: url('<%= image_path "whitehouse.png" %>');
    background-repeat: no-repeat;
    background-size: cover;
    background-color: #134061;
    color: #fff;
    border-radius: 0 !important;
    margin-bottom: 0 }
  div.tryptic-large { text-indent: -30px; }
  div.tryptic-small { color: #fff; margin-bottom: 0; border-radius: 0 !important }
  div.tryptic-small h4 { margin-left: 20px }
  div.tryptic-search { background-color: #2C7BB5 }
  div.tryptic-ask { background-color: #1F5E8C }
  div.tryptic-answer { background-color: #134061 }

  /* Large desktops and laptops */
  @media (min-width: 1200px) {
    div.tryptic-large h1 {
      text-indent: -30px;
      padding-left: 30px;
    }
    div.tryptic-large h3 {
      padding-left: 23px;
      text-indent: 0;
    }
  }

  /* Portrait tablets and medium desktops */
  @media (min-width: 992px) and (max-width: 1199px) {
    div.tryptic-large h3 {
      padding-left: 0;
      text-indent: 0;
    }
  }

  /* Portrait tablets and small desktops */
  @media (min-width: 768px) and (max-width: 991px) {
    div.tryptic-large h3 {
      padding-left: 0;
      text-indent: 0;
    }
  }

  /* Landscape phones and portrait tablets */
  @media (max-width: 767px) {
    div.tryptic-large h1 {
      text-indent: -20px;
      padding-left: 20px;
    }
    div.tryptic-large h3 {
      padding-left: 20px;
      text-indent: 0;
    }
  }

  /* Landscape phones and smaller */
  @media (max-width: 480px) {
    div.tryptic-large h1 {
      text-indent: -10px;
      padding-left: 10px;
      font-size: 1.7em;
    }
    div.tryptic-large h3 {
      padding-left: 10px;
      text-indent: 0;
    }
  }
  
  h4 {
      display: block;
      height: 47px;
      line-height: 24px;
  }

  .main-footer {
      font-size: 80%;
      border-top: 1px solid #bbb;
      height: 210px;
      margin-top: 50px;
      padding-top: 40px;
  }

  .main-footer__horizontal-lg {
      padding: 0;
      float: right;
      color: #ccc;
  }

  .fb_iframe_widget {
      margin: 0 0 0 15px;
      top: -8px;
  }

  h1 { font-family: "Montserrat","Helvetica Neue",​Helvetica,Arial,​sans-serif; }

  @media (min-width: 768px)
  .navbar-right {
      margin-right: 15px;
  }

  .navbar-default .navbar-nav>li>a {
        color: #FFF;
  }
</style>
<div class="col-lg-12 well row" style="margin-top: 10px">
  <div class="col-lg-5">
    <div style="padding-top: 56.25%; position: relative; height: 0; width: 100%">
      <iframe 
        style="width: 100%; height: 100%; top: 0; left: 0; position: absolute" 
        src="https://www.youtube.com/embed/7R2YmWutlR0" 
        frameborder="0">
      </iframe>
    </div>
  </div>
  <div class="col-lg-7">
    <h1>FIX DEMOCRACY
        FIRST</h1>
    <p class="subheader">Imagine what we could do after we get democracy working again. With a government that represents all citizens equally, so many things will be possible. So tell us: why do you want to #FixDemocracyFirst?</p>
    <%= link_to 'Share your story', {controller: :statements, action: :new}, class: "btn btn-lg btn-info pull-left", style: "width: 250px; font-size: 22px ; background: blue" %>
  </div>
</div>
<%= render 'statements/videos' %>