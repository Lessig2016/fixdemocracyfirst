<% if notice || alert %>
<div class="row">
  <div class="alert alert-dismissible alert-<%=notice ? 'success' : 'danger'%> col-lg-12">
  	<button type="button" class="close" data-dismiss="alert">×</button>
  	<%= notice || alert %>
  </div>
</div>
<% end %>

<style> 
  h1 { font-family: "Proxima Nova","Helvetica Neue",​Helvetica,Arial,​sans-serif }
  div.tryptic-large { 
    background: url('<%= image_path "whitehouse.png" %>');
    background-repeat: no-repeat;
    background-size: cover;
    background-color: #134061;
    color: #fff;
    border-radius: 0 !important;
    margin-bottom: 0 }
  div.tryptic-large { text-indent: -30px; }
  div.tryptic-small { color: #fff; margin-bottom: 0; border-radius: 0 !important }
  div.tryptic-small h4 { margin-left: 20px }
  div.tryptic-search { background-color: #2C7BB5 }
  div.tryptic-ask { background-color: #1F5E8C }
  div.tryptic-answer { background-color: #134061 }

  /* Large desktops and laptops */
  @media (min-width: 1200px) {
    div.tryptic-large h1 {
      text-indent: -30px;
      padding-left: 30px;
    }
    div.tryptic-large h3 {
      padding-left: 23px;
      text-indent: 0;
    }
  }

  /* Portrait tablets and medium desktops */
  @media (min-width: 992px) and (max-width: 1199px) {
    div.tryptic-large h3 {
      padding-left: 0;
      text-indent: 0;
    }
  }

  /* Portrait tablets and small desktops */
  @media (min-width: 768px) and (max-width: 991px) {
    div.tryptic-large h3 {
      padding-left: 0;
      text-indent: 0;
    }
  }

  /* Landscape phones and portrait tablets */
  @media (max-width: 767px) {
    div.tryptic-large h1 {
      text-indent: -20px;
      padding-left: 20px;
    }
    div.tryptic-large h3 {
      padding-left: 20px;
      text-indent: 0;
    }
  }

  /* Landscape phones and smaller */
  @media (max-width: 480px) {
    div.tryptic-large h1 {
      text-indent: -10px;
      padding-left: 10px;
      font-size: 1.7em;
    }
    div.tryptic-large h3 {
      padding-left: 10px;
      text-indent: 0;
    }
  }
  
  h4 {
      display: block;
      height: 47px;
      line-height: 24px;
  }

  .main-footer {
      font-size: 80%;
      border-top: 1px solid #bbb;
      height: 210px;
      margin-top: 50px;
      padding-top: 40px;
  }

  .main-footer__horizontal-lg {
      padding: 0;
      float: right;
      color: #ccc;
  }

  .fb_iframe_widget {
      margin: 0 0 0 15px;
      top: -5px;
  }

  @media (min-width: 768px)
  .navbar-right {
      margin-right: 15px;
  }

  .navbar-default .navbar-nav>li>a {
        color: #FFF;
  }
</style>
