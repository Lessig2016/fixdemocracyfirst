<% if notice %>
	<div class="alert alert-dismissible alert-success col-lg-12">
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= notice %>
	</div>
<% end %>

<div class="page-header">
	<h2>Events</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Candidates</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.upcoming.each do |event| %>
      <tr>
        <td><%= event.format_start_date %></td>
        <td><%= link_to event.title, event %></td>
        <td><%= event.format_people %></td>
        <td><%= event.format_location %></td>
      <% if @current_user.admin? %>
        <td><%= link_to 'Show', event, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @current_user.admin? %><%= link_to 'New Event', new_event_path, class: "btn btn-primary" %><% end %>
